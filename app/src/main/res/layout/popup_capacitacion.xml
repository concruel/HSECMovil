<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/transparent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBlanco"
        android:elevation="100dp"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.85"
                android:background="@color/colorBtnBeige"
                android:textColor="@color/colorBlanco"
                android:text="Capacitaciones recibidas"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibclose"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:layout_weight="0.15"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="38dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:text="Fecha"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:text="TextView"
                        android:textSize="16sp"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Duracion"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        />

                    <TextView
                        android:id="@+id/tx_duracion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:text="TextView"
                        android:textSize="16sp"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Tema"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        />

                    <TextView
                        android:id="@+id/tx_tema"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:text="TextView"
                        android:textSize="16sp"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Tipo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"/>

                    <TextView
                        android:id="@+id/tx_tipo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:text="TextView"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Nota"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_nota"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:text="TextView"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Estado"
                        android:textSize="16sp"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_estado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:text="TextView"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tx7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.65"
                        android:text="Vencimiento"
                        android:textSize="16sp"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tx_vencimiento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.35"
                        android:fontFamily="@font/asap"
                        android:textColor="@color/colorNegro"
                        android:text="TextView"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/id_cerrar"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ColorbtnVerdoso"
                android:text="Cerrar"

                android:textColor="@color/colorBlanco"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>