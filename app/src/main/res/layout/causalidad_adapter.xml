<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="2dp"
android:padding="2dp"
android:orientation="vertical"
android:background="@drawable/customborder"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tipo Causa"
                android:textSize="@dimen/size_text_izq"
                android:textStyle="bold"
                android:layout_weight="0.72"
                tools:text="Tipo Causa"
                android:fontFamily="@font/asap"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tx_tipo_causa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text=""
                android:layout_weight="0.28"
                tools:text=""
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.72"
                android:fontFamily="@font/asap"
                android:gravity="right|center_vertical"
                android:paddingTop="@dimen/pad_topbottom_der"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:text="Condición"
                android:textAlignment="textEnd"
                android:textSize="@dimen/size_text_izq"
                android:textStyle="bold"
                tools:ignore="RtlCompat"
                tools:text="Condición" />

            <TextView
                android:id="@+id/tx_condicion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="0.28"
                tools:text=""
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Causa"
                android:textSize="@dimen/size_text_izq"
                android:textStyle="bold"
                android:layout_weight="0.72"
                tools:text="Causa"
                android:fontFamily="@font/asap"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tx_causa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="0.28"
                tools:text=""
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comentario"
                android:textSize="@dimen/size_text_izq"
                android:textStyle="bold"
                android:layout_weight="0.72"
                tools:text="Comentario"
                android:fontFamily="@font/asap"
                android:gravity="right|center_vertical"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tx_comentar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="0.28"
                android:paddingBottom="@dimen/pad_topbottom_der"
                android:paddingTop="@dimen/pad_topbottom_der"
                tools:text=""
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>