<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ubicaciones.ActUbicacion">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ColorVerdoso">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/transparent"
                android:onClick="close"
                android:src="@drawable/ic_flecha_retroceder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageView20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:cropToPadding="false"
                android:onClick="SaveUbicacion"
                android:src="@drawable/cwac_cam2_ic_check_white"
                android:background="@drawable/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tx_titulo"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:gravity="center_vertical"
                android:text="Configuración de Ubicaciones"
                android:textColor="@color/colorBlanco"
                android:textSize="@dimen/titulo_det"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView20"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/dim_icon_t"
                android:layout_height="@dimen/dim_icon_t"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/location"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >




            <androidx.cardview.widget.CardView
                android:id="@+id/card_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/tx_ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.72"
                        android:background="@color/ColorPlomo4"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingTop="@dimen/pad_topbottom_der"
                        android:paddingRight="8dp"
                        android:paddingBottom="@dimen/pad_topbottom_der"
                        android:text="Ubicación"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/size_text_izq"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat"
                        tools:text="Ubicación" />

                    <Spinner
                        android:id="@+id/spinner_ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"

                        android:textColor="@color/colorNegro"

                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_sububicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/tx_sububicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sub ubicación"
                        android:textSize="@dimen/size_text_izq"
                        android:textStyle="bold"
                        android:layout_weight="0.72"
                        tools:text="Sub ubicación"
                        android:background="@color/ColorPlomo4"
                        android:gravity="right|center_vertical"
                        android:textAlignment="textEnd"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="@dimen/pad_topbottom_der"
                        android:paddingTop="@dimen/pad_topbottom_der"
                        tools:ignore="RtlCompat" />

                    <Spinner
                        android:id="@+id/spinner_sububicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"

                        android:textColor="@color/colorNegro"

                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ubic_esp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/tx_ubic_esp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ubicación especifica"
                        android:textSize="@dimen/size_text_izq"
                        android:textStyle="bold"
                        android:layout_weight="0.72"
                        tools:text="Ubicación especifica"
                        android:background="@color/ColorPlomo4"
                        android:gravity="right|center_vertical"
                        android:textAlignment="textEnd"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="@dimen/pad_topbottom_der"
                        android:paddingTop="@dimen/pad_topbottom_der"
                        tools:ignore="RtlCompat" />

                    <Spinner
                        android:id="@+id/spinner_ubic_esp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"

                        android:textColor="@color/colorNegro"

                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/id_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/txtmaps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ubicacion"
                        android:textSize="@dimen/size_text_izq"
                        android:textStyle="bold"
                        tools:text="Ubicación Maps"
                        android:layout_weight="0.72"

                        android:background="@color/ColorPlomo4"
                        android:gravity="right|center_vertical"
                        android:textAlignment="textEnd"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="@dimen/pad_topbottom_der"
                        android:paddingTop="@dimen/pad_topbottom_der"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.28"
                        android:weightSum="1"
                        >
                        <TextView
                            android:id="@+id/insp_maps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="xxxxxxxxxxxxxxxxx"
                            android:textSize="@dimen/size_text_der"
                            android:layout_weight="0.16"

                            android:gravity="left"
                            android:textColor="@color/colorNegro"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            />

                        <ImageButton
                            android:id="@+id/btn_buscar_m"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="0.84"
                            app:srcCompat="@drawable/ic_addmaps"
                            android:background="@drawable/transparent"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


<!--            <androidx.cardview.widget.CardView-->
<!--                android:id="@+id/card_test"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                >-->



