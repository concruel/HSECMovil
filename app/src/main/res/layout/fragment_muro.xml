            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <Button
                    android:id="@+id/btn_facilito"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/ColorbtnVerdoso"
                    android:drawableLeft="@drawable/ic_facilito"
                    android:text="Facilito"

                    android:textSize="10dp" />
                <Button
                    android:id="@+id/btn_obs"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:background="@color/ColorbtnVerdoso"
                    android:text="Observaciones"
                    android:drawableLeft="@drawable/ic_iobservacion"
                    />
                <Button
                    android:id="@+id/btn_insp"
                    style="@style/Widget.AppCompat.Button.Borderless"
