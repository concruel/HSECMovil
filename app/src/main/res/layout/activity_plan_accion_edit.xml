            <android.support.v7.widget.CardView
                android:id="@+id/id_fechafin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_NivelRiesgo">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@color/ColorPlomo4"
                        android:gravity="right|center_vertical"
                        android:text="Final:"
                        android:textSize="@dimen/size_izq_planedit"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/pad_left_right"
                        android:paddingRight="@dimen/pad_left_right"
                        android:paddingBottom="@dimen/pad_topbottom_der"
                        android:paddingTop="@dimen/pad_topbottom_der"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btn_fechafin"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:gravity="top"
                        android:onClick="EscogerFechafinal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Seleccionar fecha final"
                        android:textSize="@dimen/size_der_planedit"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView7"
                        app:layout_constraintStart_toEndOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.6" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_calendary"
                        android:onClick="sel_fec_final"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="0dp"
                android:background="@color/ColorPlomo4"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text="Tarea:"
                android:textSize="@dimen/size_text_izq"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_tarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:textSize="@dimen/size_der_planedit"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@android:color/transparent"

                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <android.support.v7.widget.CardView
                android:id="@+id/Responsables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ColorPlomo4"
                    >

                    <TextView
                        android:id="@+id/subresponsables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="Responsables"
                        android:textSize="@dimen/size_text_izq"
                        android:textStyle="bold"
                        android:background="@color/ColorPlomo4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/add_responsables"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:src="@drawable/ic_add_circle_outline_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listResponsables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-45dp"
        android:background="@color/ColorbtnVerdoso"
        android:textColor="@color/colorBlanco"
        android:onClick="SalvarPlan"

        android:text="Guardar"
        android:visibility="gone"
         />

</LinearLayout>