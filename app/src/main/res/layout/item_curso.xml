<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_carview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <ImageView
            android:id="@+id/im_recurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

        <TextView
            android:id="@+id/txt_tema"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TEMA"
            android:textColor="@color/colorNegro"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/txt_duracion"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toBottomOf="@+id/txt_tema" />

        <TextView
            android:id="@+id/txt_duracion"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Duracion"
            android:textColor="@color/colorNegro"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_tema" />

        <TextView
            android:id="@+id/txt_empresa"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:text="Empresa"
            android:textColor="@color/colorNegro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_recurrence"
            app:layout_constraintTop_toBottomOf="@+id/txt_fecha" />

        <TextView
            android:id="@+id/txt_tipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_recurrence"
            app:layout_constraintTop_toBottomOf="@+id/txt_empresa" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>